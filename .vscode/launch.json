    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch Go Backend",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/backend/cmd/app/main.go"
        },
        {
            "name": "Start React Frontend",
            "type": "node",
            "request": "launch",
            "cwd": "${workspaceFolder}/frontend",
            "runtimeExecutable": "npm",
            "runtimeArgs": ["start"],
            "port": 3000,
            "skipFiles": [
                "<node_internals>/**"
            ],
            "console": "integratedTerminal"
        }
    ],
    "compounds": [
        {
            "name": "Start Full Stack",
            "configurations": ["Launch Go Backend", "Start React Frontend"]
        }
    ]
}